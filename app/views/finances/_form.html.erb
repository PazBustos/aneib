<%= form_for(@finance) do |f| %>
	<% if @finance.errors.any? %>
		<div id="error_explanation">
			<% @finance.errors.full_messages.each do |message| %>
				<%flash[:alert] = "No se pudo generar el reporte de cuentas por lo siguiente:<br>".html_safe+message %>
			<% end %>
		</div>
	<% end %>
<div class="panel panel-default panel-aneib">
	<div class="panel-heading">
		Datos de la cuenta
	</div>
	<div class="panel-body">
		<div class="field">
			<%= f.label :title, "Título" %>
			<%= f.text_field :title, :class => "form-control" %>
		</div>

		<div class="field">
			<%= f.label :category, "Categoría" %>
			<%= f.select(:category, [['Ingreso', 1],['Egreso', 2],['Balance',3]], {:include_blank => '— Seleccione una opción —'}, { :class => 'form-control', :required => true }) %>
		</div>

		<div class="field">
			<%= f.label :date,"Fecha" %>
			<p><%= f.date_select :date, {order: [:day, :month, :year] }, { class: "form-control date", autocomplete: true } %></p>
		</div>
		
		<div class="field">
			<p class="note">Se permiten archivos .pdf .doc .xls .ppt .png .jpg .gif</p>
			<%=f.file_field :archive, :class=>'btn btn-default btn-form'%>
		</div>
		
		<div class="field">
			<%= f.label :description, "Descripción" %>
			<%= f.text_area :description, :placeholder=> "Escribir aquí.", :id=>"eg-basic",:required=>true %>
		</div>
	</div>
</div>

<div class="actions">
	<%= f.submit "aceptar", :class=>"btn btn-default btn-form" %>
	<%= link_to 'Volver', administration_cuentas_path,:class=>'btn btn-default btn-form' %>
</div>
<% end %>
