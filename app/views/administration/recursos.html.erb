<h1>Administración Recursos</h1>
<%= link_to "Nuevo recurso", new_resource_path, class:"btn btn-default btn-admin"%>

<ul class="nav nav-tabs tabRease nav-justified">
	<li id="res1" onclick="res1()"><a>tipo 1</a></li>
	<li id="res2" onclick="res2()"><a>tipo 2</a></li>
	<li id="res3" onclick="res3()"><a>tipo 3</a></li>
	<li id="res4" onclick="res4()"><a>tipo 4</a></li>
	<li id="res5" onclick="res5()"><a>Otros</a></li>
</ul>
<div id="tipo1">
	<div class="panel panel-default panel-aneib">
		<div class="panel-heading">
			tipo1 disponibles
		</div>
		<div class="panel-body">
			<%if @tipo1.present?%>
				<% @tipo1.each do |resource| %>
					<p> <%=resource.name%>: <%=l resource.date%> - 
					<%= link_to 'Ver recurso', resource.archive.url, :target => "_blank" %> -
					<%= link_to 'Detalle', resource %> -
					<%= link_to 'eliminar recurso', resource, method: :delete, data: { confirm: '¿Seguro que desea eliminar esta acta?' } %>
					</p>
				<%end%>
			<%else%>
				<p>No hay tipo1 de reuniones disponibles</p>
			<%end%>
		</div>
	</div>
</div>

