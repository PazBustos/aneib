<h1>Administración Cuentas claras</h1>
<%= link_to "Nueva Cuenta", new_finance_path, class:"btn btn-default btn-admin"%>
<div class="panel panel-default">
	<div class="panel-heading">
		Listado de Cuentas claras
	</div>
	<div class="panel-body">
		<% @finances.each do |finanzas| %>
			<p>
			<%=	finanzas.title %>  - 
			<%=	link_to "Ver", finanzas %>  -				
			<%= link_to "Editar", edit_finance_path(finanzas)%> - 
			<%= link_to 'Eliminar', finanzas, method: :delete, data: { confirm: '¿Está seguro de eliminar esta cuenta?' } %>
			</p>
		<%end%>
	</div>
</div>