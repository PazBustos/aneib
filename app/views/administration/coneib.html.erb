<h1>Administración CONEIB</h1>
<%= link_to "Nueva sección de ¿Qué es CONEIB?", portals_newConeib_path, class:"btn btn-default btn-admin"%>
<div class="panel panel-default panel-aneib">
	<div class="panel-heading">
		Listado de secciones ¿Qué es CONEIB? anteriores
	</div>
	<div class="panel-body">
		<% @portals.each do |portal| %>
			<p>
			<%=	portal.title %>  - 
			<%=	link_to "Ver", portal %>  -				
			<%= link_to "Editar", edit_portal_path(portal)%> - 
			<%= link_to 'Eliminar', portal, method: :delete, data: { confirm: '¿Está seguro de eliminar esta sección?' } %>
			</p>
		<%end%>
	</div>
</div>