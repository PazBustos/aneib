<%seccion ||= 1%>
<%accion ||= "Crear" %>
<%= form_for(@portal) do |f| %>
	<% if @portal.errors.any? %>
		<div id="error_explanation">
			<% @portal.errors.full_messages.each do |message| %>
				<%flash[:alert] = "No se pudo generar la sección por lo siguiente:<br>".html_safe+message %>
			<% end %>
		</div>
	<% end %>

	<div class="panel panel-default panel-aneib">
		<div class="panel-heading">
			Administración de una sección de 
			<%if seccion == 1%>
				Noticias
			<%elsif seccion == 2%>
				¿Quiénes somos?
			<%elsif seccion == 3%>
				¿Qué es ANEIB?
			<%else%>
				Estatuto
			<%end%>
		</div>
		<div class="panel-body">
			<div class="field">
					<%= f.label :title, "Título" %>
					<%= f.text_field :title, class:"form-control" %>
				</div>

				<%if accion == "Nuevo"%>
					<% if seccion == 1 %>
						<%= f.label :section, "Sección: "%>
						<%= f.select(:section, [['Noticia', 1]], {:include_blank => '— Seleccione una sección —',:selected => seccion }, { :class => 'form-control', :required => true }) %>
					<% elsif seccion == 2 %>
						<%= f.label :section, "Sección: "%>
						<%= f.select(:section, [['¿Quiénes somos?', 2]], {:include_blank => '— Seleccione una sección —',:selected => seccion }, { :class => 'form-control', :required => true }) %>
					<% elsif seccion == 3 %>
						<%= f.label :section, "Sección: "%>
						<%= f.select(:section, [['¿Qué es CONEIB?', 3]], {:include_blank => '— Seleccione una sección —',:selected => seccion }, { :class => 'form-control', :required => true }) %>
					<%elsif seccion == 4 %>
						<%= f.label :section, "Sección: "%>
						<%= f.select(:section, [['Estatuto', 4]], {:include_blank => '— Seleccione una sección —',:selected => seccion }, { :class => 'form-control', :required => true }) %>
					<%else%>
						<%= f.label :section, "Sección: "%>
						<%= f.select(:section, [['Hazte Socio', 5]], {:include_blank => '— Seleccione una sección —',:selected => seccion }, { :class => 'form-control', :required => true }) %>
					<%end%>
				<%else%>
					<div class="field"><p>
						<%= f.label :section, "Sección: "%>
						<%= f.select(:section, [['Noticia', 1],['¿Quiénes somos?', 2],['¿Qué es CONEIB?', 3],['Estatuto', 4],['Hazte Socio', 5]], {:include_blank => '— Seleccione una sección —'}, { :class => 'form-control', :required => true }) %>
					</p></div>
				<%end%>	
				<div class="field">
					<%= f.label :body, "Descripción" %>
					<%= f.text_area :body, :placeholder=> "Escribir aquí.", :id=>"eg-basic",:required=>true %>
				</div>

		</div>
	</div>
<div class="actions">
	<%= f.submit "Aceptar",:class=>"btn btn-default btn-form" %>
	<%= link_to 'Volver', :back,:class=>'btn btn-default btn-form' %>
</div>	
<% end %>
