<%= form_for(@topic) do |f| %>
	<% if @topic.errors.any? %>
		<div id="error_explanation">
		<h2>
			<%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:
		</h2>
		<ul>
			<% @topic.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :title, "Título" %><br>
		<%= f.text_field :title, :class=>'form-control' %>
	</div>
	<div class="field">
		<%=f.label :description, "Descripción"%>
		<%= f.text_area :description, :placeholder=> "Escribir aquí.", :id=>"eg-basic",:required=>true %>
	</div>    
	<div class="actions">
		<%= f.submit 'Aceptar', :class=>'btn btn-default btn-form' %>
	</div>
<% end %>
