<%= form_for(@resource) do |f| %>
	<% if @resource.errors.any? %>
		<div id="error_explanation">
			<% @resource.errors.full_messages.each do |message| %>
				<%flash[:alert] = "No se pudo generar el recurso por lo siguiente:<br>".html_safe+message %>
			<% end %>
		</div>
	<% end %>

	<div class="panel panel-default panel-aneib">
		<div class="panel-heading">
			Datos del recurso
		</div>
		<div class="panel-body">
			<div class="field">
				<%= f.label :name, "Nombre" %>
				<%= f.text_field :name, :class=>'form-control' %>
			</div>
	
			<div class="field"><p>
				<%= f.label :category, "Tipo de recurso: "%>
				<%= f.select(:category, [['Acta', 1],['Planillas', 2],['Extra', 3]], {:include_blank => '— Seleccione un tipo de recurso —'}, { :class => 'form-control', :required => true }) %>
			</p></div>

			<div class="field">
				<p class="note">Se permiten archivos .pdf .doc .xls</p>
				<%=f.file_field :archive, :class=>'btn btn-default btn-form'%>
			</div>

			<div class="field">
				<%=f.label :description, "Descripción"%>
				<%= f.text_area :description, :placeholder=> "Escribir aquí.", :id=>"eg-basic",:required=>true %>
			</div>
		</div>
	</div>
<div class="actions">
	<%= f.submit "aceptar", :class=>"btn btn-default btn-form" %>
	<%= link_to 'Volver', administration_recursos_path,:class=>'btn btn-default btn-form' %>
</div>
<% end %>