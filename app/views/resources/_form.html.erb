<%= form_for(@resource) do |f| %>
	<% if @resource.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

			<ul>
				<% @resource.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="panel panel-default panel-aneib">
		<div class="panel-heading">
			Datos del recurso
		</div>
		<div class="panel-body">
			<div class="field">
				<%= f.label :name, "Nombre" %><br>
				<%= f.text_field :name, :class=>'form-control' %>
			</div>

			<div class="field">
				<%=f.label :description, "Descripción"%>
				<%= f.text_area :description, :placeholder=> "Escribir aquí.", :id=>"eg-basic",:required=>true %>
			</div>
			
			<div class="field"><p>
				<%= f.label :category, "Tipo de recurso: "%>
				<%= f.select(:category, [['Acta', 1],['Planillas', 2],['Extra', 3]], {:include_blank => '— Seleccione un tipo de recurso —'}, { :class => 'form-control', :required => true }) %>
			</p></div>

			<div class="field">
				<%=f.label :archive, "Archivo adjunto"%>
				<%=f.file_field :archive%>
			</div>

			<div class="field"><br>
				<%= f.label :date,"Fecha" %>
				<%= f.date_select :date, :class=>'form-control' %>
			</div>
			<div class="actions"><br>
				<%= f.submit "aceptar", :class=>"btn btn-default btn-form" %>
				<%= link_to 'Volver', administration_recursos_path,:class=>'btn btn-default btn-form' %>
			</div>
		</div>
	</div>
<% end %>