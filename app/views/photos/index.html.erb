<h1>Galer√≠a</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Tittle</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.user %></td>
        <td><%= photo.tittle %></td>
        <td><%= photo.description %></td>
        <td><%= photo.picture %></td>
        <td><%= photo.date %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


$(function(){

    // Initialize the gallery
    $('#thumbs a').touchTouch();

});


