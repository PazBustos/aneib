<h1 >¿Olvidó su contraseña?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post }) do |f| %>
	<%= devise_error_messages! %>
	<div class="panel panel-default panel-aneib">
		<div class="panel-heading">
			Ingrese su correo electrónico
		</div>
		<div class="panel-body">
			<p class="note"> Ingrese su mail para recibir instrucciones de restablecimiento de contraseña<p>
			<div class="field">
			<%= f.email_field :email, :class => 'form-control', :placeholder => 'Correo electrónico', :required=>true %>
			</div>
		</div>
	</div>
	<%= f.submit "Confirmar cambio de contraseña", :class => 'btn btn-default btn-form' %>
<% end %>
<%= render "devise/shared/links" %>
	