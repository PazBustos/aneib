<h1>Inicio de sesión</h1>

<h3>Ingrese sus datos para poder conectarse a la intranet</h3>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="panel panel-default panel-aneib" >
      <div class="panel-heading">Datos personales</div>
      <div class="panel-body">

      <div class="field"><p>
      <%= f.label :email, "Correo electrónico: "%>
      <%= f.email_field :email, :placeholder => "Correo electrónico", autofocus: true ,:class => 'form-control' %>
      </p></div>

      <div class="field"><p>
        <%= f.label :password, "Contraseña: "%>
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña",:class => 'form-control' %>
      </p></div>

      <% if devise_mapping.rememberable? -%>
      <div class="field">
      <p><%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordarme" %></p>
      </div>
      <% end -%>

      <div class="actions">
      <%= f.submit "Ingresar", :class => 'btn btn-default' %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>


