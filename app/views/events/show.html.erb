<h1>Detalles del evento</h1>

<% if user_signed_in? && current_user.category != 3 %>
	<% if @event.user.id == current_user.id || current_user.category == 1%>
		<%= link_to 'Editar evento', edit_event_path(@event), :class => "btn btn-default btn-form" %>
		<%= link_to 'Eliminar evento', @event, method: :delete, data: { confirm: '¿Está seguro de eliminar el evento?' }, :class => "btn btn-default btn-form" %>
	<% end %>
<% end %>

<%= link_to 'Volver', events_path, :class => "btn btn-default btn-form" %>


<div class="panel panel-default panel-aneib" >
	<div class="panel-heading">
		<%= @event.title %>
	</div>
	
	<div class="panel-body">

		<h2>Descripción</h2>
		 <p><%=raw @event.description %></p>

		<h2> Información </h2>
		<p><strong>Dirección: </strong><%= @event.address %></p>
		<p><strong>Estado: </strong>
		<% if @event.status == 1%>
			Disponible
		<%end%>
		<% if @event.status == 2%>
			Realizado
		<%end%>
		<% if @event.status == 3%>
			Cancelado
		<%end%>
		<% if @event.status == 4%>
			Caducado
		<%end%>
		</p>
		
		<p><strong>Fecha y hora de inicio: </strong><%=l @event.start_time %></p>

		<p><strong>Fecha y hora de término: </strong><%=l @event.end_time %></p>
	</div>
</div>

<%if user_signed_in?%>
	<div class="panel panel-default panel-aneib">
		<div class="panel-heading">
			 Comentarios
		</div>
		<div class="panel-body">
		<%= render "event_comments/form" %>
			<ul>
				<% @event.event_comments.order("created_at DESC").each do |event_comment| %>
					<p>
						<%if event_comment.user.photo.present?%>
							<%= image_tag event_comment.user.photo.url(:mini), :class =>"profile-picture" %> 
						<%else%>
							<%= link_to '<i class="glyphicon glyphicon-globe"></i>'.html_safe, event_comment.user %> 
						<%end %>
						<%= link_to event_comment.user.nickname, event_comment.user%> comentó hace <%= time_ago_in_words(event_comment.created_at)%>: 
						<%if current_user == event_comment.user or current_user.category == 1 %><%= link_to 'Eliminar', event_event_comment_path(@event,event_comment), method: :delete, data: { confirm: '¿Está seguro de eliminar el comentario?' }, :class => "btn btn-default btn-comment"%>
						<%end%>	
					</p>
					<p><%=event_comment.body%></p>	
				<%end%>
			</ul>
		</div>
	</div>
<%end%>