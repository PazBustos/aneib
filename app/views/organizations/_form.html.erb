<%= form_for(@organization) do |f| %>
	<% if @organization.errors.any? %>
		<div id="error_explanation">
			<% @organization.errors.full_messages.each do |message| %>
				<%flash[:alert] = "No se pudo generar el artículo por lo siguiente:<br>".html_safe+message %>
			<% end %>
		</div>
	<% end %>
<div class="panel panel-default panel-aneib">
	<div class="panel-heading">
			Datos de la publicación
	</div>
	<div class="panel-body">
		<div class="field">
			<%= f.label :title, "Título" %>
			<%= f.text_field :title, :class => "form-control" %>
		</div>
		<div class="field">
			<%= f.label :description, "Descripción" %>
			<%= f.text_area :description, :placeholder=> "Escribir aquí.", :id=>"eg-basic",:required=>true %>
		</div>	
	</div>
</div>
<div class="actions">
	<%= f.submit "aceptar", :class => 'btn btn-default btn-form'%>
	<%= link_to "Volver", administration_organizacion_path, :class => 'btn btn-default btn-form'%>
</div>
<% end %>
