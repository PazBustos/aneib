<h1><%=@article.topic.title%></h1>
<div class="panel panel-default panel-aneib">
	<div class="panel-heading">
		<%= @article.title %>
	</div>
	<div class="panel-body">
		<p><strong><%= @article.user.nickname %></strong> dijo:</p>
		<%=raw @article.description %>
	</div>
</div>
<div class="panel panel-default panel-aneib">
	<div class="panel-heading">
		 Comentarios
	</div>
	<div class="panel-body">
	<%= render "comments/form" %>
		<ul>
			<% @article.comments.order("created_at DESC").each do |comment| %>
			<p>
				<strong><%= comment.user.nickname %>:</strong> <%= comment.body %> 
				<p class="note">
					Publicado: <%= time_ago_in_words(comment.created_at)%> atr√°s
				</p> 
			<p>
			<%end%>

		</ul>
	</div>
</div>
